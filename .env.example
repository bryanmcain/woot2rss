# Woot API configuration
WOOT_API_KEY=your_api_key_here
WOOT_API_BASE_URL=https://developer.woot.com

# Server configuration
PORT=3000

# Update intervals (cron syntax)
UPDATE_INTERVAL=*/30 * * * *     # Full update every 30 minutes
CHECK_NEW_ITEMS_INTERVAL=*/10 * * * *  # Check for new items every 10 minutes

# Database configuration
DB_PATH=./data/woot.db   # Path to SQLite database
MAX_ITEMS=1000           # Maximum number of items to store in database

# Logging configuration
ENABLE_LOGGING=false     # Set to 'true' to enable detailed logging
LOG_FILE=logs/woot2rss.log  # Path to log file
LOG_LEVEL=info           # Log level: debug, info, warn, error